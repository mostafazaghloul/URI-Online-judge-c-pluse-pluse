#include <iostream>
#include <iomanip>

using namespace std;

int main() {

double A,B,C,rectangled,circle,trapezium,square,rectangle;
double pi=3.14159;
cin>>A>>B>>C;
cout<<fixed<<setprecision(3);
rectangled=0.5*A*C;
circle=pi*(C*C);
trapezium=0.5*(A+B)*C;
square=B*B;
rectangle=A*B;

cout<<"TRIANGULO: "<<rectangled<<"\n"<<"CIRCULO: "<<circle<<"\n"<<
"TRAPEZIO: "<<trapezium<<"\n"<<"QUADRADO: "<<square<<"\n"<<
"RETANGULO: "<<rectangle<<endl;


return 0;
}
